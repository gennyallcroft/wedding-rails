<div class="sign-up-text"> Please sign in with your details below, or click <%= link_to 'here', '/users/new', method: :get %> if you are visiting the website for the first time.</div>
<center><div class="form-background-sign-in" >
<%= bootstrap_form_tag url: '/login' do %>
   <div class="form-group">
   <label for="email">Email</label>
   <input class="form-control" type="text" name="email" id="email">
  </div>
  <div class="form-group">
  <label for="password">Password</label>
  <input class="form-control" type="password" name="password" id="password">
  </div>
  <center>
  <input type="submit" name="commit" value="Continue" class="btn btn-secondary" data-disable-with="Continue">
  </center>
<%end%>
</div>
</center>

