<meta content="width=device-width, initial-scale=1" name="viewport" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<% if logged_in? %>
<div class="welcome-row">
<div class="welcome-text"> Welcome <%= current_user.first_name %> |
 <%= link_to "Log out", logout_path %>
 </div>
</div>






<!-- Load an icon library to show a hamburger menu (bars) on small screens -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<!-- Top Navigation Menu -->
<div class="topnav">
  <a href="#home" class="active">Logo</a>
  <!-- Navigation links (hidden by default) -->
  <div id="myLinks">
    <a href="#news">News</a>
    <a href="#contact">Contact</a>
    <a href="#about">About</a>
  </div>
  <!-- "Hamburger menu" / "Bar icon" to toggle the navigation links -->
  <a href="javascript:void(0);" class="icon" id="hamburger" >
    <i class="fa fa-bars"></i>
  </a>
</div>



  <center>
  <div class="nav nav-pills nav-justified">
    <div class="nav-row">
      <div class="columnx4">
        <div class="nav-item">
          <%= link_to 'HOME', {controller: 'home'}, class: 'nav-link' %>
        </div>
      </div>
      <div class="columnx4">
        <div class="nav-item">
          <%= link_to 'DETAILS', {controller: 'details'}, class: 'nav-link' %>
        </div>
      </div>
      <div class="columnx4">
        <div class="nav-item">
        <% if !responded? %>
          <%= link_to 'RSVP', new_response_path, class: 'nav-link' %>
        <% else %>
        <%= link_to 'RSVP', response_path(current_response), class: 'nav-link' %>
        <% end %>
        </div>
      </div>
      <div class="columnx4">
        <div class="nav-item">
          <%= link_to 'TRAVEL', {controller: 'travel'}, class: 'nav-link' %>
        </div>
      </div>
      <div class="columnx4">
      <div class="nav-item">
        <%= link_to 'FAQS', {controller: 'fa_qs'}, class: 'nav-link' %>
      </div>
    </div>
    </div>
  </center>
</div>
<%else%>
<div class="nav nav-pills nav-justified">
<div class="frame">
<span class="helper"></span>
 <center>
  <img src= "<%= asset_path( 'genny&joey.png' ) %>" class="welcome-page-image">
 </center>
</div>
</div>

<%end%>
